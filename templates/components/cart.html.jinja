<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
</head>
<body>
    <h1>Your Cart</h1>
    {% if cart %}
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>${{ item.price }}</td>
                        <td>
                            <a href="{{ url_for('remove_from_cart', product_id=item.id) }}">Remove</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <p>Total: ${{ total }}</p>
        <a href="{{ url_for('clear_cart') }}">Clear Cart</a>
    {% else %}
        <p>Your cart is empty.</p>
    {% endif %}
    <a href="{{ url_for('index') }}">Back to Shopping</a>
</body>
</html>
